@model CoreLibrary.Models.Book

@{
    ViewData["Title"] = "Book Detail";
}

<h1>Book Detail</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <img src="@Model.ImageUrl" class="img-rounded" alt="@Model.Name" />
        </div>
        <div class="col-sm-8">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Stock)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Stock)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-10">
                @Model.Status.ToString()
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Publisher)
            </dt>
            <dd class="col-sm-10">
                <a href="/Publisher/PublisherBooks/@Model.Publisher.PublisherId">@Model.Publisher.Name</a>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Writer)
            </dt>
            <dd class="col-sm-10">
                <a href="/Writer/WriterBooks/@Model.Writer.WriterId">@Model.Writer.Name</a>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </div>
    </div>
</div>
